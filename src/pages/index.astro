---
import Layout from "../layouts/Layout.astro";
import LandingHeader from "../components/LandingHeader.astro";
import HeroSection from "../components/HeroSection.astro";
import ChargeSection from "../components/ChargeSection.astro";
import Model_X from "../components/Model_X.astro";
import Model_S from "../components/Model_S.astro";
import SolarPanel from "../components/SolarPanel.astro";
import SolarRoof from "../components/SolarRoof.astro";
import Powerwall from "../components/Powerwall.astro";
import Accessories from "../components/Accessories.astro";
import Model_3 from "../components/Model_3.astro";
---

<Layout title="Tesla">
	<LandingHeader />
	<main
		class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll"
	>
	<div class="snap-center w-full">
		<Model_3 />
	</div>
	<div class="snap-center w-full">
		<Accessories />
	</div>
	<div class="snap-center w-full">
		<Powerwall />
	</div>
	<div class="snap-center w-full">
		<SolarRoof />
	</div>
	<div class="snap-center w-full">
		<SolarPanel />
	</div>
	<div class="snap-center w-full">
		<Model_S />
	</div>
	<div class="snap-center w-full">
		<Model_X />
	</div>
		<div class="snap-center w-full">
			<HeroSection />
		</div>
		<div class="snap-center">
			<ChargeSection />
		</div>
	</main>
</Layout>
