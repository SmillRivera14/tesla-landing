---
import Layout from "../layouts/Layout.astro";
import LandingHeader from "../components/LandingHeader.astro";
import HeroSection from "../components/HeroSection.astro";
import ChargeSection from "../components/ChargeSection.astro";
import Model_X from "../components/Model_X.astro";
import Model_S from "../components/Model_S.astro";
import SolarPanel from "../components/SolarPanel.astro";
import SolarRoof from "../components/SolarRoof.astro";
import Powerwall from "../components/Powerwall.astro";
import Accessories from "../components/Accessories.astro";
import Model_3 from "../components/Model_3.astro";
import Cybertruck from "../components/Cybertruck.astro";
import ModelY from "../components/Model-Y.astro";
---

<Layout title="Tesla">
  <LandingHeader />
  <main
    class="snap-y snap-mandatory relative w-full h-screen overflow-auto scroll"
  >
    <div id="home" class="snap-center w-full">
      <HeroSection />
    </div>
    <div id="cybertruck" class="snap-center w-full">
      <Cybertruck />
    </div>
    <div id="model_3" class="snap-center w-full">
      <Model_3 />
    </div>
    <div id="model_s" class="snap-center w-full">
      <Model_S />
    </div>
    <div id="model_x" class="snap-center w-full">
      <Model_X />
    </div>
    <div id="model_y" class="snap-center w-full">
      <ModelY />
    </div>
    <div id="accessories" class="snap-center w-full">
      <Accessories />
    </div>
    <div id="powerwall" class="snap-center w-full">
      <Powerwall />
    </div>
    <div id="solarroof" class="snap-center w-full">
      <SolarRoof />
    </div>
    <div id="solarpanel" class="snap-center w-full">
      <SolarPanel />
    </div>
  </main>
</Layout>
