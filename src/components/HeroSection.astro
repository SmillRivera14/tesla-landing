import Section from "../components/Section.astro";
---

<Section
  color="white"
  title="Disfrute de tesla"
  subtitle="Programe una prueba de conducción hoy mismo"
>
  <div slot="footer">
    <a
      class="text-white border-[3px] border-white bg-white/5 backdrop-blur-sm rounded font-sm px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors duration-300"
      href="#"
    >
      Prueba de conducción
    </a>
  </div>

  <video
    slot="background"
    class="object-center object-cover h-full w-full"
