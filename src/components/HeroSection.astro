---
import Section from "../components/Section.astro";
---

<Section
  color="white"
  title="Enjoy tesla"
  size="sm"
  subtitle="Schedule a driving test today."
>
  <div slot="footer">
    <a
      class="text-white border-[3px] border-white bg-white/5 backdrop-blur-sm rounded font-sm px-12 py-2 inline-block hover:bg-white hover:text-black transition-colors duration-300"
      href="https://www.tesla.com/drive"
      target="_blank"
    >
      Demo Drive
    </a>
  </div>

  <video
    slot="background"
    class="object-center object-cover h-full w-full"
    autoplay
    muted
    loop
    src="/public/video.webm"></video>
</Section>
