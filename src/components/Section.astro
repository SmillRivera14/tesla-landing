---
const {color, title, subtitle, subtitle2, size, estilo} = Astro.props
const textColor = `text-${color}`
const textSize = `text-${size}`
const textStile = `font-${estilo}`
---

<section class="landing-section  h-screen w-full text-center relative overflow-hidden"
data-header-color={color}
>
  <div class="z-30 relative h-full flex flex-col">
    <header>
      <h2 class={`${textColor} pt-28 text-[40px] font-medium`}>{title}</h2>
      <slot name="textComponents" />
      <p class={`${textColor} ${textSize} ${textStile}`}>{subtitle}</p>
      <p class={`${textColor} ${textSize} ${textStile}`}>{subtitle2}</p>
    </header>

    <footer class="flex flex-grow flex-col justify-end pb-20">
      <slot name="footer"/>
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <slot name="background"/>
  </div>
  
</section>
